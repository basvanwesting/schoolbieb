{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-console": 0,
    "no-unused-vars": 0,
    "semi": [
      "error",
      "never"
    ],
    "quotes": [
      "off",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "quote-props": [
      "error",
      "consistent"
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "never"
      }
    ],
    "comma-dangle": [
      "error",
      "only-multiline"
    ],
    "max-len": [
      "off"
    ],
    "no-shadow": [
      "error",
      {
        "builtinGlobals": true,
        "hoist": "functions",
        "allow": []
      }
    ]
  }
}
