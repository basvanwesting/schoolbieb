= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      h2 = "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      ul
        - @book.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :reading_level
    = f.text_field :reading_level
  .field
    = f.label :avi_level
    = f.text_field :avi_level
  .field
    = f.label :author
    = f.text_field :author
  .actions = f.submit
